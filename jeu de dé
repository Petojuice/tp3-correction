#404

import random

force_adversaire = random.randint(1, 5)
numero_adversaire = 0
nombre_victoires = 0
nombre_defaites = 0
niveau_vie = 20

boucle_jeu = True
while boucle_jeu:
  print('Vous tombez face à face avec un adversaire de difficulté', force_adversaire )
  # affiche le menu de la partie
  table = int(input('Que voulez-vous faire ? \n\t 1- Combattre cet adversaire \n\t 2- Contourner cet adversaire et aller ouvrir une autre porte \n\t 3- afficher les regles du jeux \n\t 4- quitter la partie'))

  # l'usager combat l'adversaire
  if table == 1:
      score_de = random.randint(1, 6)
      numero_adversaire = numero_adversaire + 1
      print("Adversaire:", numero_adversaire, "\n\t Force de l'adversaire:", force_adversaire, "\n\t Niveau de vie de l'usager:",niveau_vie, "\n\tCombat:", numero_adversaire, "\n\t:", nombre_victoires, " victoire VS ", nombre_defaites, " defaite" )

      if score_de <= force_adversaire:
          print("Vous avez perdu")
          niveau_vie = niveau_vie - force_adversaire
          nombre_defaites = nombre_defaites + 1

      if score_de == force_adversaire:
          print("Vous avez perdu")
          niveau_vie = niveau_vie - force_adversaire
          nombre_defaites = nombre_defaites + 1

          if score_de >= force_adversaire:
              print("Vous avez gagner")
              niveau_vie = niveau_vie + force_adversaire
              nombre_victoires = nombre_victoires + 1
# l'usager contourne l'advairsaire
  if table == 2:
      print("Vous decidez de contourner cet adversaire")
      niveau_vie = niveau_vie - 1
# règle du jeu
  elif table == 3:
      print("Pour réussir un combat, il faut que la valeur du dé lancé soit supérieure à la force de l’adversaire.  Dans ce cas, le niveau de vie de l’usager est augmenté de la force de l’adversaire. \n\tUne défaite a lieu lorsque la valeur du dé lancé par l’usager est inférieure ou égale à la force de l’adversaire.  Dans ce cas, le niveau de vie de l’usager est diminué de la force de l’adversaire. \n\tLa partie se termine lorsque les points de vie de l’usager tombent sous 0. \n\tL’usager peut combattre ou éviter chaque adversaire, dans le cas de l’évitement, il y a une pénalité de 1 point de vie.")

  elif table == 4:
      print("Merci et au revoir...")
      boucle_jeu = False

  if niveau_vie == 0:
      print("vous n'avez plus de vie.\n\tGAME OVER")
